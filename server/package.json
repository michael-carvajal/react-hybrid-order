{
  "name": "hybrid_order_server",
  "version": "3.2.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "start": "node app.js",
    "electron": "electron .",
    "build": "electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "electron-context-menu": "^4.0.4",
    "express": "^4.19.2",
    "mssql": "^11.0.1",
    "playwright": "^1.44.1"
  },
  "devDependencies": {
    "electron": "^31.2.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.hybridOrderServer.id",
    "productName": "Hybrid Order Server",
    "icon": "src/images/icon.png",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "dist/**/*",
      "main.js",
      "package.json",
      "preload.js"
    ],
    "extraResources": [
      "build"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
